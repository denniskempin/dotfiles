# Load ZIM for a good basic setup
export ZIM_HOME=${ZDOTDIR:-${HOME}}/.zim
[[ -s ${ZIM_HOME}/init.zsh ]] && source ${ZIM_HOME}/init.zsh

# Use antibody to load extra plugins
source <(antibody init)
antibody bundle changyuheng/fz
antibody bundle rupa/z

export EDITOR=code
export VISUAL=$EDITOR

# CTRL-Left and Right
bindkey "^[^[[C" forward-word
bindkey "^[^[[D" backward-word

# Disable completion of users which is painfully slow on corporate networks
zstyle ':completion:*' users

# Load fzf
source ~/.fzf.zsh

# Load machine specific config
if [ $(hostname -s) = "migrator" ]; then
    source ~/dotfiles/zsh/migrator.zsh
fi
if [ $(hostname -s) = "denniskempin.mtv" ]; then
    source ~/dotfiles/zsh/corp.zsh
fi