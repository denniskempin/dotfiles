{
  // Basic settings
  "editor.fontLigatures": true,
  "editor.rulers": [
    100
  ],
  "editor.fontFamily": "Fira Code",
  "editor.tabSize": 4,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.colorTheme": "Snazzy Operator",
  "keyboard.dispatch": "keyCode",
  "terminal.integrated.defaultProfile.linux": "fish",
  // Vim mode config
  "vim.highlightedyank.enable": true,
  "vim.visualstar": true,
  "vim.whichwrap": "h,l,\u003c,\u003e,[,]",
  "vim.hlsearch": true,
  "vim.cursorStylePerMode.normal": "block-outline",
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.cursorStylePerMode.visual": "underline",
  "vim.cursorStylePerMode.visualblock": "underline",
  "vim.cursorStylePerMode.visualline": "underline",
  "vim.easymotion": true,
  "vim.smartRelativeLine": true,
  "vim.mouseSelectionGoesIntoVisualMode": true,
  // Enable (shift-)tab for indentation in visual mode
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "S-Tab"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.outdentLines",
          "args": []
        }
      ]
    },
    {
      "before": [
        "Tab"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.indentLines",
          "args": []
        }
      ]
    }
  ],
  // Rust
  "files.watcherExclude": {
    "**/target/**": true
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.enable": false,
  // Bazel
  "files.associations": {
    "BUILD": "bazel",
    "METADATA": "bazel",
    "WORKSPACE": "bazel"
  },
  // Shell scripts
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "100"
  ],
  // Gitlens
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "gitlens.blame.toggleMode": "window",
  "gitlens.changes.toggleMode": "window",
  "gitlens.views.branches.avatars": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.commits.pullRequests.showForBranches": false,
  "gitlens.views.commits.pullRequests.enabled": false,
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.views.branches.showBranchComparison": false,
  "gitlens.views.branches.pullRequests.showForBranches": false,
  "gitlens.views.branches.pullRequests.enabled": false,
  "gitlens.views.showRelativeDateMarkers": false,
  "gitlens.views.fileHistory.avatars": false,
  // JavaScript
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "tabnine.experimentalAutoImports": true,
  // Misc
  "prettier.printWidth": 100,
  "prettier.proseWrap": "always",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "python.linting.lintOnSave": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  "dotfiles.repository": "https://github.com/denniskempin/dotfiles"
}
